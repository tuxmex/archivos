<div class="card mb-3">
    <div class="card-header">
        <i class="fas fa-table"></i>
        All News </div>
        <% if(message.length > 0) { %>
            <div class="alert alert-danger">
                <%= message %>
            </div>
        <% }%>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <th> Title </th>
                    <th> Sub title </th>
                    <th> Photo </th>
                    <th> Actions </th>
                </thead>

                <tfoot>
                    <th> Title </th>
                    <th> Sub title </th>
                    <th> Photo </th>
                    <th> Actions </th>
                </tfoot>

                <tbody>
                    <% for(var news of newsList) { %>
                        <tr>
                            <td> <%= news.title %> </td>
                            <td> <%= news.sub_title %> </td>
                            <td> 
                                <!-- <img class="logo" src="/images/trump_balboa1.jpg"> -->
                                <img src="<%= news.news_photo %>" height="80" width="80"/> 
                            </td>
                            <td> <a href="/news/edit/<%= news.id %>" class="btn btn-outline-primary btn-sm"> Edit </a> | <a href="/news/delete/<%= news.id %>" onclick="return checkDelete()" class="btn btn-outline-danger btn-sm"> Delete </a> </td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>

</div>

<script>
    function checkDelete() {
        var check = confirm('Are you sure you want to Delete this?');
        if (check) {
            return true;
        }
        return false;
    }
</script>