<div class="card mb-3">
    <div class="card-header">
        <i class="fas fa-table"></i>
        All Topics </div>
        <% if(message.length > 0) { %>
            <div class="alert alert-danger">
                <%= message %>
            </div>
        <% }%>
            
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th> Topic Name </th>
                        <th>Actions </th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th> Topic Name </th>
                        <th>Actions </th>
                    </tr>
                </tfoot>
                <tbody>

                        <% for(var topic of topics) {%>

                            <tr>
                                <td> <%= topic.topic_name %> </td>
                                <td>
                                    <a href="/topics/edit/<%= topic.id %>" class="btn btn-outline-primary btn-sm"> Edit </a>
                            |
                            <a href="/topics/delete/<%= topic.id %>" class="btn btn-outline-danger btn-sm"
                                onclick="return checkDelete();"> Delete </a>
                                </td>
                            </tr>
                            <% } %>
                    


                </tbody>
            </table>
        </div>
    </div>

</div>

<script>
    function checkDelete() {
        var check = confirm('Are you sure you want to Delete this?');
        if (check) {
            return true;
        }
        return false;
    }
</script>